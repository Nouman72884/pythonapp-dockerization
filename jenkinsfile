pipeline {
  environment {
    registry = "020046395185.dkr.ecr.us-east-1.amazonaws.com/pythonapp"
    registryCredential = 'AWS'
    dockerImage = ''
  }
  agent any
  stages {
    stage('Cloning Git') {
      steps {
        git 'https://github.com/Nouman72884/pythonapp-dockerization.git'
      }
    }
    stage('Building image') {
      steps{
        script {
          dockerImage = docker.build registry + ":latest"
        }
      }
    }
    stage('Deploy Image') {
      steps{
         script {
            docker.withRegistry("https://" + registry,"ecr:us-east-1:" + registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
    stage('Run Image') {
      steps{
         script {
            
            sh "docker run --name pythonapp -p 5000:5000 -d 020046395185.dkr.ecr.us-east-1.amazonaws.com/pythonapp:latest"
          }
        }
      }
    }
  }
